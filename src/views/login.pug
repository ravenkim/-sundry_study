extends base

block content
    .wrapper-top 
            main
                .loginPage
                    if errorMessage
                        div=errorMessage
                    form(method="POST")
                        input(placeholder="ID", name="id", type="text", required)
                        input(placeholder="Password", name="password", type="password", required)
                        input(type="submit", value="LogIn").submitBtn 
                        
                    .social-login 
                        
                        
                    div.auth-switch
                        div Don't have an account? 
                        a(href="/join") 
                            div Create one now &rarr; 